-if !user_signed_in?
  %li
    = link_to "Log In", new_user_session_path
  %li
    = link_to "Sign Up", new_user_registration_path
-else
  %li.dropdown
    %a.dropdown-toggle{'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
    %ul.dropdown-menu
      %li= link_to 'Settings', edit_user_registration_path, class: "collapse-link"
      %li= link_to "Orders", orders_path, class: "collapse-link"
      - if current_user.admin?
        %li= link_to "Admin Panel", rails_admin_path, class: "collapse-link"
      %li= link_to "Log out", destroy_user_session_path, method: 'delete', class: "collapse-link"