%main.container
  = render 'checkout_list', step: 1

  = form_for(@user, url: wizard_path, method: :patch, class: 'res-mb-100') do |user_form|
    = hidden_field_tag 'back', "#{back_address}"
    .row
      .col-md-5.mb-40
        = user_form.fields_for :billing_address do |billing_form|
          %h3.general-subtitle Billing Address
          %p all fields are required
          = render 'forms/address_form', f: billing_form, form_name: "billing_address"

      .col-md-5.col-md-offset-1.mb-60
        = user_form.fields_for :shipping_address do |shipping_form|
          %h3.general-subtitle Shipping Address
          - if !identical_address?     
            %p#hidden_test_block
            
          #hiddenabble_address_block
            = render 'forms/address_form', f: shipping_form, form_name: "shipping_address"
        
          .form-group.checkbox
            %label.font-weight-light.pl-0
              = check_box_tag "identical", "true", identical_address?, class: "checkbox-input", hidden: "true"
              %span.checkbox-icon
                %i.fa.fa-check
              %span.checkbox-text Use Billing Address
      
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        = render 'summary'
      = user_form.button 'Save and Continue', class: 'btn center-block mb-20'
