%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    = render "devise/shared/links"
    %p.general-login-text or

  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'general-form'}) do |f|
    /= devise_error_messages!
    .form-group.mb-30
      = f.label :email, 'Enter Email', :class=>'control-label input-label'
      = f.email_field :email, class: 'form-control', placeholder: 'Enter Email', autofocus: true

    .form-group.mb-30
      = f.label :password, :class=>'control-label input-label'
      = f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: "Enter password"
      = link_to "Forgot password?", new_password_path(resource_name), class: "help-block.in-gold-500"
    
    -if devise_mapping.rememberable?
      .form-group.checkbox.text-center.mb-30   
        = f.label :remember_me do
          = f.check_box :remember_me, hidden: "true", class: 'checkbox-input'
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text Remember me

    .text-center
      = f.submit "Log in", class: 'btn btn-default mb-20'

    %p.general-sign-text.text-center
      Donâ€™t have an Account?
      = link_to 'Sign up', new_registration_path(resource_name), class: 'in-gold-500'
   