%main.container
  %h1.general-title-margin Settings
  /= devise_error_messages!
 
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation", class: "#{@address_tab}" }
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"} Address
    %li.tab-item{role: "presentation", class: "#{@privacy_tab}" }
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"} Privacy
  .tab-content
    #address.tab-pane.fade.active{role: "tabpanel", class: ['in', 'general-main-wrap', "#{@address_tab}"]}
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :patch}) do |user_form|
        .hidden-xs.hidden-sm
          .row
            .col-md-5
              %h3.general-subtitle.mt-0 Billing Address
            .col-md-5.col-md-offset-1
              %h3.general-subtitle.mt-0 Shipping Address
        .row
          .col-md-5.mb-40
            = user_form.fields_for :billing_address do |billing_form|
              .visible-xs.visible-sm
                %h3.general-subtitle.mt-0 Billing Address
              = render 'forms/address_form', f: billing_form, form_name: "billing_address" 
              .text-center.general-text-align
                = billing_form.button 'Save billing address', {name: 'form', value: 'billing_address', class: 'btn'}
                
          .col-md-5.col-md-offset-1.mb-25
            = user_form.fields_for :shipping_address do |shipping_form|
              .visible-xs.visible-sm
                %h3.general-subtitle.mt-0 Shipping Address
              = shipping_form.hidden_field :form, :value => 'shipping_address'
              = render 'forms/address_form', f: shipping_form, form_name: "shipping_address"  
              .text-center.general-text-align
                = shipping_form.button 'Save shipping address', {name: 'form', value: 'shipping_address', class: 'btn'}
                    
    #privacy.tab-pane.fade{role: "tabpanel", class: ['in', 'general-main-wrap', "#{@privacy_tab}"]}
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25 Email
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :patch, class: 'general-form-md'}) do |f|

            .form-group.mb-35
              = f.label :email, 'Enter Email', :class=>'control-label input-label'
              = f.email_field :email, class: 'form-control', placeholder: 'Enter Email'

            .general-text-align
              = f.submit "Save", class: 'btn btn-default mb-35'
 
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25 Password
          = form_for(resource, as: resource_name, url: "#{registration_path(resource_name)}?check_pass=true", html: {method: :patch, class: 'general-form-md divider-lg-bottom pb-25'}) do |f|
            .form-group.mb-30
              = f.hidden_field :reset_password_token
          
              = f.label :current_password, 'oldPassword', :class=>'control-label input-label'
              = f.password_field :current_password, class: 'form-control', autocomplete: "off", placeholder: "oldPassword"
            
            .form-group.mb-30
              = f.label :password, 'New Password', :class=>'control-label input-label'
              = f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: "New Password"

            .form-group.mb-40
              = f.label :password_confirmation, 'Confirm Password', :class=>'control-label input-label'
              = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: "Confirm Password"

            .general-text-align
              = f.submit "Save", class: 'btn btn-default mb-10'
        .col-sm-12
          %p.in-gold-500.font-18.mb-25 Remove Account
          %form
            .general-settings-btn
              %button.btn.disabled.mb-20 Please Remove My Account
            .form-group.checkbox.general-settings-checkbox
              %label.checkbox-label
                %input.checkbox-input{type: "checkbox", hidden: "true"}
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text I understand that all data will be lost
